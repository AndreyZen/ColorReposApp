<Page x:Class="ColorSetApp.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ColorSetApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage" FontSize="16" FontFamily="Arial Narrow">

    <Grid>
        <Border HorizontalAlignment="Center" VerticalAlignment="Center" Padding="10"
                BorderBrush="Black" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Код сотрудника" FontFamily="Arial Black"
                           FontSize="16" HorizontalAlignment="Center" Margin="5"/>
                <TextBox Width="200" x:Name="TbCode"/>
                <Button Margin="0 5" Content="Войти" x:Name="BtnLogin" Click="BtnLogin_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
